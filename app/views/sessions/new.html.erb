<div class="row vertical-offset-100">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-headline">
          <h3 class="panel-title">Авторизация</h3>
        </div>
      </div>
      <div class="panel-body">
        <%= form_tag sessions_path, role: "form" do %>
          <fieldset>
            <div class="form-group">
              <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Введите e-mail" %>
            </div>
            <div class="form-group">
              <%= password_field_tag :password, "", class: "form-control", placeholder: "Введите пароль" %>
            </div>
            <%= submit_tag "Войти", class: "btn btn-lg btn-success btn-block" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
