<%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <% @user.errors.full_messages.each do |message| %>
      <div class="alert alert-danger alert-dismissible fade in" role=alert>
        <button type=button class=close data-dismiss=alert aria-label=Close>
          <span aria-hidden=true>&times;</span>
        </button>
        <%= message %>
      </div>
      <% end %>

    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Имя", class: "control-label col-xs-3" %>
    <div class="col-xs-9">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "control-label col-xs-3" %>
    <div class="col-xs-9">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, "Телефон", class: "control-label col-xs-3" %>
    <div class="col-xs-9">
      <%= f.number_field :phone, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_url, "Адрес аватара", class: "control-label col-xs-3" %>
    <div class="col-xs-9">
      <%= f.text_field :image_url, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, "Пароль", class: "control-label col-xs-3" %>
    <div class="col-xs-9">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Повторите пароль", class: "control-label col-xs-3" %>
    <div class="col-xs-9">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, "Адрес", class: "control-label col-xs-3" %>
    <div class="col-xs-9">
      <%= f.text_area :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-offset-3 col-xs-9">
      <%= f.submit class: "btn btn-primary", value: "Зарегистрироваться" %>
    </div>
  </div>
<% end %>
