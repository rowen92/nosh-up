<div class="col-xs-3 col-md-3 col-sm-3">
  <%= image_tag avatar_url(@user), class: "img-responsive img-rounded" %>
</div>
<div class="col-xs-9 col-md-9 col-sm-9">
  <table class="table">
    <tr>
      <td>
        <strong>Имя:</strong>
      </td>
      <td>
        <%= @user.name %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Email:</strong>
      </td>
      <td>
        <%= @user.email %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Телефон:</strong>
      </td>
      <td>
        <%= @user.phone %>
      </td>
    </tr>
    <tr>
      <td>
        <strong>Адрес:</strong>
      </td>
      <td>
        <%= @user.address %>
      </td>
    </tr>
  </table>
  <% if current_user == @user %>
    <%= link_to "Редактировать", edit_user_path(current_user), class: "btn btn-link" %>
  <% end %>
  <% if current_user != @user %>
    <%= link_to @make_admin_button, admin_make_admin_path(user_id: @user.id),
                                    class: "btn btn-link",
                                    data: { confirm: "Вы уверенны?" } %>
  <% end %>
</div>
