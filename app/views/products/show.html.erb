<div class="col-xs-4">
  <%= image_tag @product.image_url(:middle), class: "img-responsive" if @product.image? %>
</div>
<div class="col-xs-8">
  <h4><%= @product.title %></h4>
  <p><%= link_to @product.category.title, admin_categories_path, class: "text-right" %></p>
  <p class="text-muted"><%= @product.description %></p>
  <h4 class="text-danger text-right"><%= number_to_currency(@product.price, unit: "₴") %></h4>
  <p><%= button_to 'Купить', line_items_path(product_id: @product), class: 'btn btn-success btn-block' %></p>
</div>
<h3>Комментарии к блюду</h3>
<ul class="media-list">
  <%= render @product.comments %>
</ul>
<h3>Добавить комментарий</h3>
<%= render "comments/form" %>
