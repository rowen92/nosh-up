<% if @category.present? %>
  <h2 class="text-warning text-center"><%= @category.title %></h2>
<% else %>
  <h2 class="text-warning text-center">Все продукты</h2>
<% end %>

<%= render @products %>
<div class="clearfix"></div>
<div class="paginate">
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>
