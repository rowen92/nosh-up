<% if @category.present? %>
  <h2 class="text-warning"><%= @category.title %></h2>
<% else %>
  <h2 class="text-warning">Все продукты</h2>
<% end %>

<% @products.each do |product| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= link_to (image_tag product.image_url(:middle)), product_path(product), class: "img-responsive" if product.image? %>
      <div class="caption">
        <h3 class="text-center text-muted"><%= link_to product.title, product_path(product) %></h3>
          <h4 class="text-danger text-center"><%= number_to_currency(product.price, unit: "") %> грн</h4>
          <p><%= button_to 'Купить', line_items_path(product_id: product), class: 'btn btn-success btn-block' %></p>
      </div>
    </div>
  </div>
<% end %>
