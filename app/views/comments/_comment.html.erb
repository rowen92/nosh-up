<li class="media">
  <%= image_tag avatar_url(comment.user), width: "64px", class: "img-responsive pull-left" %>
  <div class="media-body">
    <h4 class="media-heading"><%= comment.user.name %></h4>
    <div class="media">
      <%= comment.body %>
   </div>
   <%= link_to "Удалить комментарий", [comment.product, comment],
                                         method: :delete,
                                         data: { confirm: "Вы уверены?" } %>
  </div>
</li>
