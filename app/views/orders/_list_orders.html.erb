<h4>Мои заказы</h4>
<% if @orders.empty? %>
  <h5 class="text-mute">Заказов еще нет, <%= link_to "купите", products_path %> что-то :)</h5>
<% else %>
  <div class="table-responsive">
    <table class="table table-striped table-hover vertical-align">
      <thead>
        <tr>
          <th>#</th>
          <th>Статус выполнения</th>
          <th>Дата</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <%= content_tag :tr,
            class: case order.status
            when "primary"
              "warning"
            when "in_progress"
              "active"
            when "complete"
              "success"
            else "cancel"
              "danger"
            end do %>
            <td><%= link_to order.id, order %></td>
            <td><%= order.status.humanize %></td>
            <td><%= order.created_at.strftime("%m-%e-%y %H:%M") %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
