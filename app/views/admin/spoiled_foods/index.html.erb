<h2>Списанные продукты</h2>

<div class="table-responsive">
  <table class="table table-striped table-hover vertical-align">
    <thead>
      <tr>
        <th>Продукт</th>
        <th>Вес</th>
        <th>Дата списания</th>
      </tr>
    </thead>
    <tbody>
      <% @spoiled_foods.each do |spoiled_food| %>
        <tr>
          <td><%= spoiled_food.food.title %></td>
          <td><%= number_to_currency(spoiled_food.weight, unit: "") %> кг</td>
          <td><%= spoiled_food.created_at.strftime("%m-%e-%y %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
