<p>
  Номер заказа: #<%= @order.id %>
</p>
<%= link_to download_check_pdf_admin_orders_path(order: @order), class: "btn pull-right" do %>
  <span class="glyphicon glyphicon-save-file" aria-hidden="true"></span>
  Чек
<% end %>
<p>
  Статус выполнения:
  <%= @order.status.humanize %>
  <%= link_to "изменить",  '#', "data-target": "#modal_order_status", "data-toggle": "modal"  %>
</p>

<p>
  Пользователь:
  <%= link_to @order.user.name, user_path(@order.user), target: "_blank" %>
</p>

<%= render "admin/orders/list_line_items" %>

<div id='<%= "modal_order_status" %>'class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Смена статуса заказа #<%= @order.id %></h4>
      </div>
      <div class="modal-body">
        <%= render "form", order: @order %>
      </div>
    </div>
  </div>
</div>
