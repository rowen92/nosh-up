<h2>Заказы</h2>

<div class="table-responsive">
  <table class="table table-striped table-hover vertical-align">
    <thead>
      <tr>
        <th>#</th>
        <th>Статус</th>
        <th>Дата</th>
        <th>Пользователь</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.id, [:admin, order] %></td>
          <td><%= order.status %></td>
          <td><%= order.created_at %></td>
          <td><%= link_to order.user.name, user_path(order.user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
