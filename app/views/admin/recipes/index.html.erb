<%= link_to 'Новый рецепт', new_admin_recipe_path, class: "btn btn-default btn-sm new-item-button" %>
<h2>Рецепты</h2>
<div class="table-responsive">
  <table class="table table-striped table-hover vertical-align">
    <thead>
      <tr>
        <th>Блюдо</th>
        <th>Общий вес</th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= link_to recipe.product, [:admin, recipe] %></td>
          <td><%= number_to_currency(recipe.weight, unit: "") %> кг</td>
          <td>
            <%= link_to edit_admin_recipe_path(recipe) do %>
              <span class="glyphicon glyphicon-pencil text-muted" aria-hidden="true"></span>
            <% end %>
          </td>
          <td>
            <%= link_to [:admin, recipe], method: :delete, data: { confirm: 'Вы уверены?' } do %>
              <span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
