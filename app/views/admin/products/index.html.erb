<h2>Продукты</h2>
<%= link_to 'Новый продукт', new_admin_product_path, class: "btn btn-default btn-sm new-item-button" %>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Цена</th>
      <th>Фото</th>
      <th>Категория</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.image_url %></td>
        <td><%= product.category.title %></td>
        <td><%= link_to 'Показать', [:admin, product], class: "btn btn-default btn-xs btn-block" %></td>
        <td><%= link_to 'Редактировать', edit_admin_product_path(product), class: "btn btn-default btn-xs btn-block" %></td>
        <td><%= link_to 'Удалить', [:admin, product], class: "btn btn-danger btn-xs btn-block", method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
