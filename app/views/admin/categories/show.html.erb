<div class="col-xs-4">
  <%= image_tag @category.image_url(:middle), class: "img-responsive" if @category.image? %>
</div>
<div class="col-xs-8">
  <h4><%= @category.title %></h4>
  <p class="text-muted"><%= @category.description %></p>
</div>
<div class="col-xs-12">
  <%= link_to 'К списку категорий', admin_categories_path %> |
  <%= link_to 'Редактировать', edit_admin_category_path(@category) %>
</div>
