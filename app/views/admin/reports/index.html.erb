<h2>Отчеты</h2>
<hr>
<h3>Успешные заказы</h3>
<%= form_tag(download_success_orders_pdf_admin_reports_path, method: "GET", class: "navbar-form navbar-left") do %>
  <div class="form-group">
    <%= text_field_tag :date,
                        params[:date],
                        class: "form-control",
                        placeholder: "Месяц и год",
                        "data-provide" => 'datepicker',
                        "data-date-format" => "mm/yyyy",
                        "data-date-start-view" => "year",
                        "data-date-min-view-mode" => "months" %>
    <%= button_tag(type: "submit", class: "btn btn-default") do %>
      Загрузить
    <% end %>
  </div>
<% end %>
<div class="clearfix"></div>
<hr>
<h3>Списанные продукты</h3>
<%= form_tag(download_cancel_porducts_pdf_admin_reports_path, method: "GET", class: "navbar-form navbar-left") do %>
  <div class="form-group">
    <%= text_field_tag :date,
                        params[:date],
                        class: "form-control",
                        placeholder: "Месяц и год",
                        "data-provide" => 'datepicker',
                        "data-date-format" => "mm/yyyy",
                        "data-date-start-view" => "year",
                        "data-date-min-view-mode" => "months" %>
    <%= button_tag(type: "submit", class: "btn btn-default") do %>
      Загрузить
    <% end %>
  </div>
<% end %>
<div class="clearfix"></div>
<hr>
<h3>Остаток продуктов на складе</h3>
<%= link_to "Загрузить", download_foods_pdf_admin_reports_path, class: "btn btn-default" %>
<hr>
